{
  "name": "sagarmatha-tracker",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "pnpm --filter backend start:dev",
    "build:backend": "pnpm --filter backend build",
    "lint": "pnpm --filter backend lint",
    "test": "pnpm --filter backend test -- --coverage",
    "type-check": "pnpm --filter backend type-check",
    "format": "pnpm --filter backend format",
    "format:check": "pnpm --filter backend format:check",
    "dev": "pnpm --parallel dev",
    "build": "pnpm -r build",
    "test:all": "pnpm -r test"
  },
  "devDependencies": {
    "pnpm": "^10.30.2"
  }
}